@model UnitTest_Assignment1.Models.PersonModel

@{
    ViewData["Title"] = "Person Details";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Thông Tin Chi Tiết</h4>
        </div>
        <div class="card-body">
            <p><strong>Full Name:</strong> @Model.LastName @Model.FirstName</p>
            <p><strong>Gender:</strong> @Model.Gender</p>
            <p><strong>DOB:</strong> @Model.DOB.ToString("dd/MM/yyyy")</p>
            <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
            <p><strong>Birth Place:</strong> @Model.BirthPlace</p>
            <p><strong>Is Graduated:</strong> <span class="badge @(Model.IsGraduated ? "bg-success" : "bg-warning")">
                @(Model.IsGraduated ? "Có" : "Không")</span>
            </p>
        </div>
    </div>

    <div class="d-flex justify-content-between mt-3">
        <a href="@Url.Action("Index", "Rookies")" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Index
        </a>
        <form asp-action="DeleteConfirmation" asp-controller="Rookies" method="post" onsubmit="return confirm('Are you sure you want to delete this!!');">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Delete
            </button>
        </form>
    </div>
</div>
